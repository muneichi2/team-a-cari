.card__contents__wrapper
  %header
    = render 'modules/header_log_in'

  %nav.bread-crumbs
    - breadcrumb :card_add
    = breadcrumbs class: "breadcrumbs", style: :ul, separator: " #{content_tag(:i, '', :class=>'fa fa-chevron-right')} "

  %main.prof__l-container.clearfix.credit__flexbox
    = render 'side/side_bar'

    .card__wrapper
      %section.card__input--text
        %h2 支払い方法
        .default__card--list
          %section
            .default__card--list-text
              %h3 クレジットカード一覧
        %section.credit__add__wrapper--button
          = link_to root_path, class: "link__add__card" do
            .credit__add__content--button
              %i.fa.fa-credit-card
              クレジットカードを追加する
        .set__payment
          = link_to root_path do
            %span お支払い方法について
            %i.fa.fa-angle-right

  = image_tag (asset_path "mercari.png")

  %a.sell-btn
    .sell-btn__text 出品
    = fa_icon 'camera'
